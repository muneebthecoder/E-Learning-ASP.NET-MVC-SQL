@model List<ELearning.Models.Course>

<table class="table table-striped table-bordered table-hover">
    <thead style="background-color: #000; color: #fff;">
        <tr>
            <th>Course Title</th>
            <th>Category</th>
            <th>Description</th>
            <th>Image</th>
            <th>Hours</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.c_title</td>
                <td>@course.c_category</td>
                <td>@course.c_description</td>
                <td>
                    @if (!string.IsNullOrEmpty(course.c_image))
                    {
                        <img src="@course.c_image" alt="@course.c_title" class="img-thumbnail" style="max-width: 150px; max-height: 100px;" />
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </td>
                <td>@course.c_hours</td>
                <td>@course.c_rating</td>
            </tr>
        }
    </tbody>
</table>
