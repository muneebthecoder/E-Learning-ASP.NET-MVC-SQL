@model List<ELearning.Models.Course>
@{
    ViewBag.Title = "Teacher Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .dashboard-container {
            padding: 30px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.02);
            }

        .card-header {
            background-color: #007bff;
            color: white;
            font-size: 1.25rem;
            font-weight: bold;
            padding: 10px 15px;
        }

        .card-body {
            padding: 15px;
        }

        .course-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 10px 10px 0 0;
        }

        .course-title {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .course-schedule {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .rating {
            color: #ffc107;
            font-size: 1.2rem;
            display: flex;
            gap: 2px;
        }

            .rating i {
                text-decoration: none;
            }

        .btn-outline-danger {
            border-width: 2px;
            transition: all 0.3s ease;
        }

        .logout-btn {
            position: absolute;
            right: 30px;
            top: 30px;
        }
    </style>
</head>
<body>
    <div class="container dashboard-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4">Teacher Dashboard</h1>
            <a class="btn btn-outline-danger" href="@Url.Action("Logout", "Teacher")">
                Logout <i class="fas fa-sign-out-alt"></i>
            </a>
        </div>
        <div class="text-center">
            <b>@Session["tname"] (@Session["tq"])</b>  <br>
            @Session["temail"]
        </div>
        <br>
        <div class="row">
            @if (Model.Any())
            {
                foreach (var course in Model)
                {
                    <div class="col-md-4">
                        <a href="/Course/CourseDetails?id=@course.cid">
                            <div class="card">
                                <img src="@course.c_image" alt="@course.c_title" class="course-image">
                                <div class="card-body">
                                    <h5 class="course-title">@course.c_title</h5>
                                    <p class="course-schedule">@course.c_description</p>
                                    <!-- Rating stars -->
                                    <div class="rating">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < course.c_rating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <p>No courses allocated.</p>
            }
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
